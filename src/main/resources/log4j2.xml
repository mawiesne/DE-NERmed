<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p[%t] %C{1}(%L) - %m%n"/>
            <!--
            <PatternLayout pattern="%d %-5p [%t] %C{1} (%F:%L) - %m%n"/>
            -->
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="de.hhn.mi.dener" level="info"/>
        <Logger name="de.hhn.mi.dener.service" level="info"/>
        <Logger name="de.hhn.mi.dener.utils" level="warn"/>

        <Root level="WARN">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>